{
  "compilerOptions": {
    "traceResolution": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "es6", "es7", "es5", "dom", "scripthost"],
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false
  }
}